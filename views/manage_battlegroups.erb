<!DOCTYPE html>
<html>
<head>
	<title>Faction Battlegroups</title>
</head>
<body>
	<nav>
		<a href="/">Home</a>
	</nav>
	<p>Behold yon mighty battlgroups!</p>
	<section>
		<label>Create New Battlegroup</label>
		<form id="bg_type" action="/create/battlegroup" method="POST">
			<select name="bg_type" required>
				<option disabled selected>-Select Battlegroup Type</option>
				<option value="4">Flag</option>
				<option value="3">Vanguard</option>
				<option value="2">Line</option>
				<option value="1">Pathfinder</option>
			</select>
			<input type="submit">
		</form>
	</section>
	<!-- Display faction bg's -->
	<section>
			<% @battlegroups.each do |battlegroup| %>
				<table>
					<thead>
						<th colspan="3"><%=battlegroup[0]%></th>
						<th>Points: <%=battlegroup[5]%></th>
					</thead>
					<tr>
						<td>Battlegroup Type:</td>
						<td>Group 1</td>
						<td>Group 2</td>
						<td>Group 3</td>
					</tr>
					<tr>
						<td><%=battlegroup[1]%></td>
						<td><%=battlegroup[2]%></td>
						<td><%=battlegroup[3]%></td>
						<td><%=battlegroup[4]%></td>
					</tr>
				</table>
				<form action="/delete/battlegroup" method="POST">
					<input type="hidden" name="bg_name" value="<%=battlegroup[0]%>">
					<input type="submit" value="Delete">
				</form><br>
			<% end %>
	</section>
</body>
</html>
